                            <div class="card card-wth-line">
                                <div class="card-line bg-success"></div>
                                <div class="card-body" style="display: flex; align-items: center;">
                                    <img src="https://img.icons8.com/?size=40&id=Bw1qS7FPUzIJ&format=png&color=00D67F" style="margin-right: 8px;">
                                    <h5 class="card-title" style="margin: 0;font-weight: bold;">Active Funds (रखे हुए गहने)</h5>
                                </div>
                                <div class="card-footer" style="color: black;font-size: 18px;">
                                    <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(loanResults[0].total_pending) %>

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="card card-wth-line">
                                <div class="card-line bg-primary"></div>
                                <div class="card-body" style="display: flex; align-items: center;">
                                    <img src="https://img.icons8.com/?size=40&id=FJ5UK7RNoMoB&format=png&color=007D88" style="margin-right: 8px;">
                                    <h5 class="card-title" style="margin: 0;font-weight: bold;">Transferred Funds (ट्रांसफर किए गए गहने)</h5>
                                </div>
                                <div class="card-footer" style="color: black;font-size: 18px;">
                                    <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(loanResults[0].total_transferred) %>


                                </div>
                            </div>
                        </div>
