                            <div class="d-flex">
                                <div class="d-flex flex-wrap justify-content-between flex-1">
                                    <div class="mb-lg-0 mb-2 me-8">
                                        <h1 class="pg-title">Investor</h1>
                                    </div>
                                   
                                </div>
                            </div>
                      
                        </div>


                        <div class="row" style="margin-top: 20px;">

                          <% for(i=0;i<investorResults.length;i++){ %>

                            <div class="col-sm-3">
                                <div class="card card-wth-line">
                                    <div class="card-line bg-primary"></div>
                                    <div class="card-body">
                                        <h5 class="card-title"><%=investorResults[i].name%></h5>
                                    </div>
                                    <div class="card-footer" style="color: black;font-size: 18px;">
                                    <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(investorResults[i].total_invested) %>
                                       
                                    </div>
                                </div>
                            </div>
                          
                            </div>

                            <% } %>
             
