                            <div class="card card-wth-line">
                                <div class="card-line bg-warning"></div>
                                <div class="card-body" style="display: flex; align-items: center;">
                                    <img src="https://img.icons8.com/?size=40&id=112571&format=png&color=FFC400" style="margin-right: 8px;">
                                    <h5 class="card-title" style="margin: 0;font-weight: bold;">Own Funds (मेरे पास के गहने)</h5>
                                </div>
                                <div class="card-footer" style="color: black;font-size: 18px;">
                                    <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(loanResults[0].total_not_transferred) %>


                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="card card-wth-line">
                                <div class="card-line bg-danger"></div>
                                <div class="card-body" style="display: flex; align-items: center;">
                                    <img src="https://img.icons8.com/?size=40&id=113106&format=png&color=FF0000" style="margin-right: 8px;">
                                    <h5 class="card-title" style="margin: 0;font-weight: bold;">1 year old Funds (एक साल पुराने गहने)</h5>
                                </div>
                                <div class="card-footer" style="color: black;font-size: 18px;">
                                    <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(loanResults[0].total_amount_last_year) %>
                                   

                                </div>
                            </div>
                        </div>
                        </div>
                                                                            

