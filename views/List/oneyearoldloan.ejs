<%- include ('.././header.ejs') %>


		<!-- Main Content -->
		<div class="hk-pg-wrapper pb-0">
			<!-- Page Body -->
			<div class="hk-pg-body py-0">
				<div class="contactapp-wrap">
					
					<div class="contactapp-content">
						<div class="contactapp-detail-wrap">
							<header class="contact-header">
								<div class="d-flex align-items-center">
									<div class="dropdown">
										<a class="contactapp-title link-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
											<h1 style="color: #1B5E20;">1 year old Funds (एक साल पुराने गहने)</h1>
										</a>

										
									
									</div>
						
									
								</div>

								<!-- <div class="dropdown">
									<a  class="contactapp-title"  href="/dashboard/loan/history" role="button" aria-haspopup="true" aria-expanded="false">
										<h1 style="color: #1B5E20;">View History</h1>
									</a>

									
								
								</div> -->
							
							
							</header>


							<style>
								.contact-card .card {
									height: 100%; /* Ensures card stretches to fill the column height */
									display: flex;
									flex-direction: column; /* Allows content to flow from top to bottom */
								}


								.card-body {
    padding: 20px;
}
.user-info p {
    font-size: 14px;
    margin-bottom: 8px;
}

							
								.contact-card .card-body {
									flex-grow: 1; /* Makes the body grow to fill available space */
									display: flex;
									flex-direction: column;
									align-items: center; /* Centers content horizontally */
									justify-content: center; /* Centers content vertically */
									/* text-align: center; */
								}
							
								.contact-card .avatar {
									margin-bottom: 10px; /* Adds spacing below the avatar */
								}
							
								.contact-card .user-name, 
								.contact-card .user-email, 
								.contact-card .user-contact {
									overflow: hidden;
									text-overflow: ellipsis; /* Adds "..." to overflow text */
									white-space: nowrap; /* Prevents text from wrapping to the next line */
									width: 100%; /* Ensures full width */
								}
							
								.contact-card .card-footer {
									display: flex;
									justify-content: center; /* Centers the footer content horizontally */
								}
							
								.contact-card {
									min-height: 100px; /* Sets a minimum height for the card to ensure consistency */
								}
							</style>

							<div class="contact-body">
								<div data-simplebar class="nicescroll-bar">

                                  

                                    <div class="container">
                                        <!-- Search Input -->
                                        <div class="mb-4">
                                            <input type="text" id="search-input" class="form-control" placeholder="Search Loans...">
                                        </div>
                                    
                                        <!-- Card Grid -->
                                        <div class="row" id="contact-cards">
                                            <!-- Contact Card 1 -->


                                            <% if(result.length == 0){ %>
                                                <p class="text-black" style="text-align: center;font-weight: bold;">No Data Found</p>
                                                                                        <% } %>

                                            <% for(i=0;i<result.length;i++) { %>

												<div class="col-xl-3 col-lg-4 col-md-6 mb-4 contact-card">
													<div class="card card-border contact-card" style="box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); border-radius: 10px;">
														<div class="card-body text-center" style="padding: 20px;">
															<!-- Avatar -->
															<div class="avatar avatar-xl avatar-rounded" style="margin-bottom: 15px;">
																<img src="<%=result[i].item_image%>" alt="user" class="avatar-img" style="border-radius: 50%; width: 100px; height: 100px; object-fit: cover; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
															</div>
												
															<!-- Customer Info -->
															<div class="user-info">
																<p><b>Customer Name - </b> <%=result[i].customername.toUpperCase()%></p>
																<p><b>Father Name - </b> <%=result[i].customerfather_name.toUpperCase()%></p>
																<p><b>Items - </b><%=result[i].item_name%></p>
																<p><b>Weight - </b><%=result[i].item_weight%></p>
																<% if(result[i].item_description) { %>
																	<p><b>Additional - </b><%=result[i].item_description%></p>
																<% } %>
																<p><b>Date - </b> <%=result[i].created_at%></p>
																<p><b>Amount - </b> ₹<%=result[i].amount%></p>
																<p><b>Interest Rate - </b> <%=result[i].rate_of_interest%>%</p>
																<p><b>Time - </b>
																	<% if (result[i].timeDiff.years > 0) { %>
																		<%= result[i].timeDiff.years %> Years
																	<% } %>
																	<% if (result[i].timeDiff.months > 0) { %>
																		<%= result[i].timeDiff.months %> Months
																	<% } %>
																	<% if (result[i].timeDiff.days > 0) { %>
																		<%= result[i].timeDiff.days %> Days
																	<% } %>
																	<% if (result[i].timeDiff.years === 0 && result[i].timeDiff.months === 0 && result[i].timeDiff.days === 0) { %>
																		Less than a day
																	<% } %>
																</p>
																<p><b>Interest Amount - </b> ₹<%= result[i].interestAmount.toFixed(2) %></p>
															</div>
														</div>
												
														<!-- Transfer Button -->
														<div class="card-footer text-muted text-center" style="padding: 10px;">
															<% if(result[i].istransfer == 'yes') { %>
																<a href="#" class="text-success">
																	<span class="fs-7 lh-1" style="font-weight: bold;"><%=result[i].investorname%> (<%=result[i].transfer_date%>)</span>
																</a>
															<% } else { %>
																<a href="/loan/transfer?loanid=<%=result[i].id%>" class="btn btn-success" style="width: 100%; padding: 10px; font-size: 14px;">
																	<i class="fas fa-exchange-alt"></i> Transfer
																</a>
															<% } %>
														</div>
													</div>
												</div>
												
												
                                    
                                            <% } %>
                                            <!-- Contact Card 2 -->
                                         
                                    
                                            <!-- Additional cards... -->
                                        </div>
                                    </div>
                                    
                                    <!-- Include Feather Icons -->
                                    <script>
                                        // feather.replace();
                                    
                                        // Search functionality
                                        document.getElementById('search-input').addEventListener('input', function() {
                                            const searchTerm = this.value.toLowerCase();
                                            const cards = document.querySelectorAll('.contact-card');
                                    
                                            cards.forEach(card => {
                                                const textContent = card.textContent.toLowerCase();
                                                if (textContent.includes(searchTerm)) {
                                                    card.style.display = 'block';
                                                } else {
                                                    card.style.display = 'none';
                                                }
                                            });
                                        });
                                    </script>
                                    
									
									
								</div>
							</div>
						</div>
						
					</div>
				</div>
			</div>
			<!-- /Page Body -->
		</div>
		<!-- /Main Content -->
	</div>
    <!-- /Wrapper -->

	<!-- jQuery -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JS -->
   	<script src="/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FeatherIcons JS -->
    <script src="/dist/js/feather.min.js"></script>

    <!-- Fancy Dropdown JS -->
    <script src="/dist/js/dropdown-bootstrap-extended.js"></script>

	<!-- Simplebar JS -->
	<script src="/vendors/simplebar/dist/simplebar.min.js"></script>
	
	<!-- Data Table JS -->
    <script src="/vendors/datatables.net/js/dataTables.min.js"></script>
    <script src="/vendors/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
	<script src="/vendors/datatables.net-select/js/dataTables.select.min.js"></script>
    
	<!-- Select2 JS -->
    <script src="/vendors/select2//dist/js/select2.full.min.js"></script>
    <script src="/dist/js/select2-data.js"></script>
	
	<!-- Dropify JS -->
	<script src="/vendors/dropify//dist/js/dropify.min.js"></script>
	<script src="/dist/js/dropify-data.js"></script>

	<!-- Init JS -->
	<script src="/dist/js/init.js"></script>
	<script src="/dist/js/contact-data.js"></script>
	<script src="/dist/js/chips-init.js"></script>
</body>

